<!-- Main Page Here -->

<div id="shorts">
	<% if (env['warden'].authenticate) %>
		<div id="add-bar">
			<% puts env['warden'].user.username %>

			<form action="/<%= env['warden'].user.username %>/add" method="post">
				<input type="url" style="margin-top: 0px; margin-left: 5px;" class="link-input" name="url" placeholder="Link (Image or YouTube)" autocomplete="off"/>
				<input type="text" style="margin-top: 0px; margin-left: 5px;" class="link-input" name="title" placeholder="Title" autocomplete="off"/>
				<input type="submit" style="width: 180px; padding-top: 0px; padding-bottom: 2px; margin-top:5px; margin-left: 5px; text-transform: none;" class="button" value="Add Link">
			</form>
		</div>
	<% end %>

	<div id="time-bar"> <div class="current-date"></div> </div>
	<% count = 1 %>
	<% if @links %>
		<% @links.reverse.each do |link| %>

				<div class="short-container">
					<% if %w[.png .jpg .gif .bmp].include? File.extname(link.url) %>
						<div class="short-cover" style="background-image:url('<%= link.url %>')"></div>
					<% elsif link.url[/(youtu\.be\/|youtube\.com\/(watch\?(.*&)?v=|(embed|v)\/))([^\?&"'>]+)/] %>
						<%= youtube_embed(link.url) %>
					<% elsif link.url[/(vimeo\.com\/)/] %>
						<%= vimeo_embed(link.url) %>
					<% elsif link.url[/(soundcloud\.com\/)/] %>
						<% soudcloud_response = soundcloud_embed(link.url) %>
						<% if soudcloud_response != "Soundcloud API is down" %>
							<%= soudcloud_response %>
						<% else %>
							<div class="short-cover" style="background-image:url('http://f.cl.ly/items/3J3u0e1n1F1j382X2P0a/soundcloud-down.jpg'); height: 300px;"> </div>
						<% end %>
					<% else %>
						<div class="short-cover" style="background-image:url('http://farm9.staticflickr.com/8250/8473268091_262cda1492_c.jpg')"> </div>
					<% end %>
					<div id="short-details">
						<div class="short-number"> <%= count %>.</div>
						<div class="short-title"><a href="/<%= link.user_username %>/<%= link.id %>"> <%= link.title %> </a></div>
						<div class="short-link"><a href="<%= link.url %>">Link</a></div>
						<!-- <div class="short-fav"><a href="#" class="fav-button">â˜… <%= link.favourites %></a></div> -->
						<div class="short-author">[via <a href="/<%= link.user_username %>"><%= link.user_username %></a>]</div>
					</div>
				</div> 
				<% count+=1 %>
				<% break if count==11 %>
		<% end %>
	<% end %>
	<div id="bottom-bar" class="short-title" style="font-weight: 400">
		All done!
	</div>
</div>


